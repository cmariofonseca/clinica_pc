<!DOCTYPE html>
<html lang="es">

  <head>
    <%- include('partials/header') %>
  </head>

  <body style="background-color: lightsteelblue;">

    <%- include('partials/navigation')  %>

    <div class="container">
      <h1>Clinica PC</h1>
      <h4>Descargue el reporte requerido</h4>
    </div>

    <div class="container p-4">
      <div class="row">
        <% users.forEach(user => { %>
          <div class="col-md-4">
            <div class="card">
              <div class="card-header">
                user_id: <%= user.id %>
              </div>
              <div class="card-body">
                <p><%= user.address %></p>
                <p><%= user.date_born %></p>
              </div>
              <div class="card-footer">
                <a href="/delete/<%= user.id %>" class="btn btn-primary">Eliminar</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>

  </body>

</html>